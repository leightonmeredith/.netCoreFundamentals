@page "{restaurantId:int?}"
@model OdeToFood.Pages.Restaurants.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit @Model.Restaurant.Name</h2>

<form method="post">
    <input type="hidden" asp-for="Restaurant.Id" /> @*asp-for is a shortcut to set name and value*@
    <div class="form-group">
        <label asp-for="Restaurant.Name"></label>
        <input asp-for="Restaurant.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Restaurant.Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.Location"></label>
        <input asp-for="Restaurant.Location" class="form-control" />
        <span class="text-danger" asp-validation-for="Restaurant.Location"></span>
    </div>

    <div class="form-group">
        <label asp-for="Restaurant.Type"></label>
        @*for uses Model but asp-items you have to specify the Model*@
        <select class="form-control" asp-for="Restaurant.Type" asp-items="Model.Cuisines"></select>
        <span class="text-danger" asp-validation-for="Restaurant.Type"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

